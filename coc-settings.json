{
    "languageserver":{
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": ["compile_commands.json", ".ccls", ".root", ".git/"],
            "initializationOptions": {
                "cacheDirectory": "/tmp/ccls"
            }
        },
        "haskell": {
            "command": "ghcide",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ]
        }
    },
    "explorer.quitOnOpen":true,
    "explorer.width":30
}
